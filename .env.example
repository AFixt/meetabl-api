# meetabl API Environment Configuration Example
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development

# Database Configuration (MySQL)
DB_DIALECT=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=meetabl_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_at_least_32_characters_long

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Application Port
PORT=3000

# Debug Mode
DEBUG=meetabl:*

# Local development flags
SKIP_EXTERNAL_SERVICES=false

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=Your Company Name

# Session Secret
SESSION_SECRET=your_session_secret_key_at_least_32_characters_long

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Google Calendar OAuth
# To enable Google Calendar integration:
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Google Calendar API
# 4. Create OAuth 2.0 credentials
# 5. Add http://localhost:3000/api/calendar/google/callback to authorized redirect URIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/calendar/google/callback

# Microsoft Calendar OAuth
# To enable Microsoft Calendar integration:
# 1. Go to https://portal.azure.com/
# 2. Register a new application
# 3. Add Calendar.ReadWrite permission
# 4. Create client secret
# 5. Add http://localhost:3000/api/calendar/microsoft/callback to redirect URIs
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/calendar/microsoft/callback

# Redis (Optional - falls back to memory store if not configured)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# AWS S3 (Optional - falls back to local storage if not configured)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Database Monitoring (Optional)
DB_MONITORING_ENABLED=true
SLOW_QUERY_THRESHOLD=1000
DB_MONITOR_LOG_LEVEL=warn
DB_MONITOR_INTERVAL=5